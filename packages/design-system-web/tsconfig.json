{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": [
      "./types/mdx.d.ts"
    ]
  },
  "include": [
    "src",
    ".storybook/lib"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.*"
  ],
}
