{
  "version": "0.3.0",
  "command": {
    "version": {
      "message": "chore(release): %s",
      "createRelease": "github",
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "exact": true,
      "forcePublish": true
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(release): publish"
    }
  },
  "packages": [
    "packages/*"
  ]
}
